<div>
  <div>
    <h1>
      List of all itineraries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new itinerary
    </h2>

    <form action="/insert_itinerary" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption">
      </div>

      <div>
        <label for="cover_image_box">
          Cover image
        </label>

        <input type="text" id="cover_image_box" name="query_cover_image">
      </div>

      <div>
        <label for="likes_count_box">
          Likes count
        </label>

        <input type="text" id="likes_count_box" name="query_likes_count">
      </div>

      <div>
        <label for="bookmarks_count_box">
          Bookmarks count
        </label>

        <input type="text" id="bookmarks_count_box" name="query_bookmarks_count">
      </div>

      <div>
        <label for="activities_count_box">
          Activities count
        </label>

        <input type="text" id="activities_count_box" name="query_activities_count">
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <button>
        Create itinerary
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Caption
        </th>

        <th>
          Cover image
        </th>

        <th>
          Likes count
        </th>

        <th>
          Bookmarks count
        </th>

        <th>
          Activities count
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_itineraries.each do |an_itinerary| %>
      <tr>
        <td>
          <%= an_itinerary.id %>
        </td>

        <td>
          <%= an_itinerary.name %>
        </td>

        <td>
          <%= an_itinerary.caption %>
        </td>

        <td>
          <%= an_itinerary.cover_image %>
        </td>

        <td>
          <%= an_itinerary.likes_count %>
        </td>

        <td>
          <%= an_itinerary.bookmarks_count %>
        </td>

        <td>
          <%= an_itinerary.activities_count %>
        </td>

        <td>
          <%= an_itinerary.owner_id %>
        </td>

        <td>
          <%= an_itinerary.location %>
        </td>

        <td>
          <%= time_ago_in_words(an_itinerary.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_itinerary.updated_at) %> ago
        </td>

        <td>
          <a href="/itineraries/<%= an_itinerary.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
